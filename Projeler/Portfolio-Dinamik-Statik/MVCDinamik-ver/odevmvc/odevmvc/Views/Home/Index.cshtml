<section id="projeler">
    <div class="pj-alan">
        <div class="pj-ic-alan">
            @foreach (var x in Model)
            {
                <div class="pj-eleman">
                    <a href="/Home/ProjectDetail/@x.ID"><img src="@x.Image" alt="img3"></a>

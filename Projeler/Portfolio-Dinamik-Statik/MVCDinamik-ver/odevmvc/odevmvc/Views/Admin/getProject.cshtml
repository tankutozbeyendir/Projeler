@model odevmvc.Models.Classes.project
@{
    ViewBag.Title = "getProject";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h2 class="title-page">Proje güncelle</h2>

<br />
@using (Html.BeginForm("EditProject", "Admin", FormMethod.Post))
{
    <label>ID</label>
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    <label>BAŞLIK</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>AUTHOR</label>
    @Html.TextBoxFor(x => x.Author, new { @class = "form-control", @readonly = "readonly" })
    <br />
    <label>TARİH</label>
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
    <br />
    <label>GÖRSEL</label>
    @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
    <br />
    <label>PROJE AÇIKLAMA</label>
    @Html.TextAreaFor(x => x.Description, 15, 1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">PROJE GÜNCELLE</button>
}
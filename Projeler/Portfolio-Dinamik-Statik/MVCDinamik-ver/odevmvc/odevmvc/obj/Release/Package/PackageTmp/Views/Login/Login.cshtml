
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/cssjs/login.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/a981a7918e.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Login</title>
</head>
<body>
    <div class="alan">

        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {

        <div class="alan-ici">

            <h1 class="display-6 text-light" style="margin-bottom:30px;">Admin Girişi</h1>
            <div class="mb-3">
                <label for="username" class="form-label text-light">Kullanıcı Adı</label>
                <input type="text" name="User" class="form-control" id="username" placeholder="Kullanıcı adı" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label text-light">Şifre</label>
                <input type="password" name="Password" class="form-control" id="password" placeholder="Şifre" required>
            </div>
            <div class="d-grid gap-2 col-6 mx-auto">
                <button class="btn btn-danger" type="submit">GİRİŞ YAP</button>
            </div><br />
            @if (ViewBag.Hata != null)
            {
                <p  class="alert alert-danger">@ViewBag.Hata</p>
            }
            else { }

        </div>
        }
    </div>
    


    
</body>
</html>

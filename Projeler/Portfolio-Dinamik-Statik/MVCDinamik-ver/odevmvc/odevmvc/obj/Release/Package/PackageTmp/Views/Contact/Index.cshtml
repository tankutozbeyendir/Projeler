
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/cssjs/contact.css">
    <!--jQuery-->
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <!--Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;700;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <!--Font awesome-->
    <script src="https://kit.fontawesome.com/a981a7918e.js" crossorigin="anonymous"></script>
    <title>Web tasarım ödevi</title>
</head>
<body>
   
    <section id="iletisim">
        <div class="iletisim-alan">
            <div class="iletisim-form">
                <form method="post" class="form">
                    @using (Html.BeginForm("Index", "Contact", FormMethod.Post))
                    {
                        <span class="baslik">İletişim</span>
                        <div class="iletisim-giris">
                            <input type="text" class="giris" name="Name" placeholder="İsim" required>
                        </div>
                        <div class="iletisim-giris">
                            <input type="text" name="Email" class="giris" placeholder="Email" required>
                        </div>
                        <div class="iletisim-giris">
                            <input type="text" name="Subject" class="giris" placeholder="Konu" required>
                        </div>
                        <div class="iletisim-giris">
                            <textarea name="Message" id="Message" class="giris" placeholder="Mesaj" required></textarea>
                        </div>
                        <div class="iletisim-btn">
                            <button class="btn" type="submit">GÖNDER<i class="fas fa-share"></i></button>
                        </div>
                    }
                    @if (ViewBag.Message != null)
                    {
                        <script type="text/javascript">
                            window.onload = function () {
                                setTimeout(function () {
                                    alert("@ViewBag.Message");
                                }, 1000);
                              };
                        </script>
                        <a href="/Home/Index" class="goToHome">Anasayfaya Dön</a>
                    }

                </form>
            </div>
            <div class="iletisim-sag">
                <div class="baslik">SOSYAL MEDYA</div>
                <div class="medya-eleman">
                    <i class="fab fa-github"></i>
                </div>
                <div class="medya-eleman">
                    <i class="fab fa-instagram"></i>
                </div>
                <div class="eleman">
                    <i class="fas fa-envelope"></i><p> tankutozbeyendir@gmail.com</p>
                </div>
                <div class="eleman">
                    <i class="fas fa-phone"></i><p> 0535353535</p>
                </div>
            </div>
        </div>
    </section>

    <script src="~/cssjs/app.js"></script>
</body>

</html>
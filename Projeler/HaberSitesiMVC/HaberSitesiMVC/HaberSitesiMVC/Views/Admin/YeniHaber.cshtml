@model HaberSitesiMVC.Models.Classes.Haber
@{
    ViewBag.Title = "YeniHaber";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Haber EKLE</h2>

<br />

<form method="post" class="form-group">
    <label>BAŞLIK</label>
    @Html.TextBoxFor(x => x.baslik, new { @class = "form-control" })
    <br />
    <label>EDİTÖR</label>
    @Html.TextBoxFor(x => x.editor, new { @class = "form-control", @readonly = "readonly", @Value = Session["kullanici"].ToString() })
    <br />
    <label>TARİH</label>
    @Html.TextBoxFor(x => x.tarih, new { @class = "form-control" })
    <br />
    <label>GÖRSEL</label>
    @Html.TextBoxFor(x => x.haberimage, new { @class = "form-control" })
    <br />
    <label>GÖRSEL 2</label>
    @Html.TextBoxFor(x => x.haberimage2, new { @class = "form-control" })
    <br />
    <label>HABER AÇIKLAMA</label>
    @Html.TextAreaFor(x => x.aciklama, 15, 1, new { @class = "form-control" })
    <br />
    <label>HABER AÇIKLAMA 2</label>
    @Html.TextAreaFor(x => x.aciklama2, 15, 1, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">HABER EKLE</button>

</form>